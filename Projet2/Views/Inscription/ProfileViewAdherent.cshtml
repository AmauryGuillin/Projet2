    <div>
        <fieldset>
            <legend> Mon inventaire : (Stuff) </legend>
            <table border="1">
                <tr>
                    <th><h2>Nom</h2></th>
                    <th><h2>Description</h2></th>
                    <th><h2>Type</h2></th>
                    <th><h2>Etat</h2></th>
                    <th><h2>Modification</h2></th>
                    <th><h2>Reservation</h2></th>
                </tr>
                @foreach (var Stuff in Model.Stuffs)
                {
                    
                    if (Stuff.AccountBorrowerId == Model.Account.Id)
                    {
                        <tr><th>Stuff en attente</th></tr>
                        <tr>
                            <td>@Html.DisplayFor(mStuffs => Stuff.Name)</td>
                            <td>@Html.DisplayFor(mStuffs => Stuff.Description)</td>
                            <td>@Html.DisplayFor(mStuffs => Stuff.Type)</td>
                            <td>@Html.DisplayFor(mStuffs => Stuff.State)</td>
                            <td>@Html.DisplayFor(mStuffs => Stuff.Reservation)</td>
