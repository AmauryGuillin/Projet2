                            <td>@Html.ActionLink("Consulter la Reservation", "ConsultationBookStuff","Stuff", new { id = Stuff.Id })</td>

                        

                        </tr>
                    }
                    if (Stuff.AccountOwnerId == Model.Account.Id)
                    {
                        <tr><th>Mon Stuff à moi</th></tr>
                        <tr>
                            <td>@Html.DisplayFor(mStuffs => Stuff.Name)</td>
                            <td>@Html.DisplayFor(mStuffs => Stuff.Description)</td>
                            <td>@Html.DisplayFor(mStuffs => Stuff.Type)</td>
                            <td>@Html.DisplayFor(mStuffs => Stuff.State)</td>
                            <td>@Html.DisplayFor(mStuffs => Stuff.Reservation)</td>
                            <td>@Html.ActionLink("Modification", "EditStuff","Stuff", new { id = Stuff.Id })</td>
                            <td>@Html.ActionLink("Réservation ajouter le if", "AcceptationBookStuff","Stuff", new { id = Stuff.Id })</td>
                        </tr>
