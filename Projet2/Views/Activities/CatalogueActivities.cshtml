@using Projet2.Models;
@model Projet2.ViewModels.ActivitiesViewModel
@{
    Layout = "_LayoutGeneral";

}
<h2>Catalogue d'activités</h2>
<div>

   

<table >
        <tr>
            <th name="Image"></th>
            <th name="Type"><h2>Type de l'activité</h2></th>
            <th name="Description"><h2>Description</h2></th>
            <th name="Place"><h2>Place</h2></th>
            <th><h2>Organizer</h2></th>
            <th><h2>StartDate</h2></th>
            <th><h2>EndDate</h2></th>
    
        </tr>
        @foreach (var Activity in Model.activities)
 {
    <tr>
                <td><img src="@Activity.ImagePath" height="100" width="100" /></td>
              <td>@Html.DisplayFor(mActivity=>Activity.activityType)</td>
                <td>@Html.DisplayFor(mActivity=>Activity.Description)</td>
                <td>@Html.DisplayFor(mActivity=>Activity.Place)</td>
                <td>@Html.DisplayFor(mActivity=>Activity.Organizer)</td>
                <td>@Html.DisplayFor(mActivity=>Activity.StartDate)</td>
                <td>@Html.DisplayFor(mActivity=>Activity.EndDate)</td>
@if(Model.Account!=null){
                <td> 
                    @*@Html.BeginForm("Book","Activities",FormMethod.Post, new {id= Activity.Id})
                        {     
                            <input type="submit" value="S'inscrire'" class="BoutonValidationFormulaire" onclick="Selection" />     
                        }*@
                        @Html.ActionLink("S'inscrire","Book","Activities",new {id= Activity.Id});
                </td>
                 }
    </tr>
}


</table>
</div>

