


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="~/css/LayoutGeneral.css" />
    <link rel="shortcut icon"
          href="Assets/Gif/ezgif-5-9ea2c6cf60-unscreen.gif"
          type="image/gif" />
          @RenderSection("ExtraCss", required:false)
</head>

<header>
    <div class="header-grid">
        <img class="header-gif"
             src="~/Assets/Gif/blue-flame-happy-hopper.gif"
             alt="Logo de l'association" />
        <h1>Play4Us</h1>
        <div class="menu">
            <a href="/Login/Index">Accueil</a>
            <a href="#Apropos">À propos</a>
            <a href="#Contact">Contact</a>
            <a href="#Jeux">Jeux</a>
            <a href="#Benevolat">Benevolat</a>
            
            
            @if (Model.Authentificate == true)
            {
                <a href='@Url.Action("PublicationWall","Publication", new {accountId = Model.Account.Id})'>Publications</a>
                <a href='@Url.Action("StuffCatalog", "Stuff", new {accountId = Model.Account.Id})'> Materiels </a>
                <a href='@Url.Action("CatalogueActivities", "Activities", new {accountId = Model.Account.Id})'> Activités et Coaching</a>

            if(Model.Account!= null){
                if (Model.Account.role == Projet2.Models.Role.Benevole)
                {
                        <a href='@Url.Action("ProfileViewBenevole", "Inscription", new {accountId = Model.Account.Id})'> Profil</a>
                }
                if (Model.Account.role == Projet2.Models.Role.Adherent)
                {
                        <a href='@Url.Action("ProfileViewAdherent", "Inscription", new {accountId = Model.Account.Id})'> Profil</a>
                }
                if (Model.Account.role == Projet2.Models.Role.Salarié)
                {
                        <a href='@Url.Action("ProfileViewEmployee", "Employee", new {accountId = Model.Account.Id})'> Profil</a>
                }
                  if (Model.Account.role == Projet2.Models.Role.Admin)
                {
                        <a href='@Url.Action("ViewDashboard", "Admin", new {accountId = Model.Account.Id})'> Dashboard</a>
                }
                }
                <input type="submit" value="Se Deconnecter" onclick="location.href='@Url.Action("Deconnexion")'" />

            
            }
            else{
            <input type="submit" value="Se Connecter/S'inscrire" onclick="location.href='@Url.Action("Login", "Login")'"/>
            }
        </div>
    </div>

    <nav class="navbar">
        <img class="header-gif"
             src="~/Assets/Gif/blue-flame-happy-hopper.gif"
             alt="image fail to load" />
        <h1>Play4Us</h1>
        <div class="nav-links">
            <ul>
                <li><a href="/Inscription/Index">Accueil</a></li>
                <li><a href="#">À propos</a></li>
                <li><a href="#">Materiels</a></li>
                <li><a href="#">Coaching</a></li>
                <li><a href="#">Jeux</a></li>
                <li><a href="#">Benevolat</a></li>
                <li><a href="#">Publications</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </div>
        <img src="~/Assets/Hamburger/transparent-hd-white-menu-burger-icon-31634946136ufll2pj5eo-removebg-preview.png"
             alt="img-none"
             class="menu-hamburger" />
    </nav>
</header>
<body>
    @RenderBody()
</body>
<footer>
    &copy; @DateTime.Now.Year - Play4Us, contactez nous via
    play4us.asso@play4us.com
</footer>
<script>
    const menuHamburger = document.querySelector(".menu-hamburger");
    const navLinks = document.querySelector(".nav-links");

    menuHamburger.addEventListener("click", () => {
        navLinks.classList.toggle("mobile-menu");
    });
</script>
    @RenderSection("ExtraJs", required:false)

</html>
