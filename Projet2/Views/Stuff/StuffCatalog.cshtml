@model List<Projet2.Models.Stuff>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
@{
    Layout = "_LayoutGeneral";
}

<h2>Catalogue de Stuff</h2>

<div>
    <table border="1">
        <tr>
            <th><h2>Nom</h2></th>
            <th><h2>Description</h2></th>
            <th><h2>Type</h2></th>
            <th><h2>Etat</h2></th>
        </tr>
        @foreach (var stuff in Model)
        {
            if(stuff.AccountBorrowerId == null)
            {
                <tr>
                    <td style="text-align : center">@stuff.Name</td>
                    <td style="text-align : center">@stuff.Description</td>
                    <td style="text-align : center">@stuff.Type</td>
                    <td style="text-align : center">@stuff.State</td>
                    @*<td><img src="@stuff.ImagePath" height="400" width="400" /></td>*@
                    @*<td><a asp-controller="Stuff" asp-action="CreateBookStuff" asp-route-id="@stuff.Id">Réserver</a></td>*@
                    <td>@Html.ActionLink("Réserver", "CreateBookStuff", "Stuff", new { id = stuff.Id })</td>
                </tr>
            }
        }
    </table>

</div>
